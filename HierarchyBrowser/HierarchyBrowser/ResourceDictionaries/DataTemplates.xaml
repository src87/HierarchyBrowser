<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HierarchyBrowser"
                    xmlns:viewModels="clr-namespace:HierarchyBrowser.ViewModels"
                    xmlns:views="clr-namespace:HierarchyBrowser.Views">
    <DataTemplate DataType="{x:Type viewModels:HierarchyViewModel}">
        <views:HierarchyView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type viewModels:SelectedItemViewModel}">
        <views:SelectedItemView/>
    </DataTemplate>
</ResourceDictionary>